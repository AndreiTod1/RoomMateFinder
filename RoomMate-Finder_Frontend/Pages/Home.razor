@page "/"

    <PageTitle>RoomMate Finder - Găsește-ți colegul perfect</PageTitle>

<!-- Hero Section -->
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="text-center py-5">
    <MudPaper Class="pa-8 mb-6" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
        <MudText Typo="Typo.h2" Class="mb-4 fw-bold">
            <MudIcon Icon="@Icons.Material.Filled.Home" Size="Size.Large" Class="me-3" />
            RoomMate Finder
        </MudText>
        <MudText Typo="Typo.h5" Class="mb-6">
            Găsește-ți colegul de cameră perfect bazat pe compatibilitate și preferințe comune
        </MudText>
        <MudButton Variant="Variant.Filled" 
                   Color="Color.Secondary" 
                   Size="Size.Large" 
                   StartIcon="@Icons.Material.Filled.PersonAdd"
                   Href="/register"
                   Class="me-3">
            Începe acum
        </MudButton>
        <MudButton Variant="Variant.Outlined" 
                   Color="Color.Secondary" 
                   Size="Size.Large" 
                   StartIcon="@Icons.Material.Filled.Login"
                   Href="/login">
            Login
        </MudButton>
    </MudPaper>
</MudContainer>

<!-- Features Section -->
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-5">
    <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-6 fw-bold">
        De ce să alegi RoomMate Finder?
    </MudText>
    
    <MudGrid Spacing="4" Justify="Justify.Center">
        <MudItem xs="12" sm="6" md="3">
            <MudCard Class="h-100 pa-4 text-center">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Psychology" 
                             Color="Color.Primary" 
                             Size="Size.Large" 
                             Class="mb-3" />
                    <MudText Typo="Typo.h5" Class="mb-3 fw-bold">
                        Matching Inteligent
                    </MudText>
                    <MudText Typo="Typo.body1">
                        Algoritmul nostru analizează compatibilitatea pentru a-ți găsi colegul perfect.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" sm="6" md="3">
            <MudCard Class="h-100 pa-4 text-center">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Chat" 
                             Color="Color.Primary" 
                             Size="Size.Large" 
                             Class="mb-3" />
                    <MudText Typo="Typo.h5" Class="mb-3 fw-bold">
                        Chat Securizat
                    </MudText>
                    <MudText Typo="Typo.body1">
                        Comunică în siguranță cu potențialii colegi prin sistemul nostru de mesagerie.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" sm="6" md="3">
            <MudCard Class="h-100 pa-4 text-center">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" 
                             Color="Color.Primary" 
                             Size="Size.Large" 
                             Class="mb-3" />
                    <MudText Typo="Typo.h5" Class="mb-3 fw-bold">
                        Profiluri Verificate
                    </MudText>
                    <MudText Typo="Typo.body1">
                        Sistemul de review-uri te ajută să faci alegerea corectă și sigură.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Class="h-100 pa-4 text-center">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Apartment"
                             Color="Color.Primary"
                             Size="Size.Large"
                             Class="mb-3" />
                    <MudText Typo="Typo.h5" Class="mb-3 fw-bold">
                        Anunțuri de Camere
                    </MudText>
                    <MudText Typo="Typo.body1">
                        Găsește și publică anunțuri pentru camere și apartamente direct pe platformă.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

<!-- How it works Section -->
<MudContainer MaxWidth="MaxWidth.Large" Class="py-5">
    <MudPaper Class="pa-6" Elevation="3" Style="background: #f8f9fa;">
        <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-6 fw-bold">
            Cum funcționează?
        </MudText>
        
        <MudGrid Spacing="4" Justify="Justify.Center">
            <MudItem xs="12" md="4">
                <MudStack AlignItems="AlignItems.Center" Class="text-center">
                    <MudAvatar Style="background-color: var(--mud-palette-primary); color: white;" Size="Size.Large" Class="mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.Person" />
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Class="fw-bold mb-2">1. Creează-ți Profilul</MudText>
                    <MudText Typo="Typo.body2">
                        Adaugă detalii despre tine și preferințele tale pentru a-ți personaliza căutarea.
                    </MudText>
                </MudStack>
            </MudItem>
            
            <MudItem xs="12" md="4">
                <MudStack AlignItems="AlignItems.Center" Class="text-center">
                    <MudAvatar Style="background-color: var(--mud-palette-secondary); color: white;" Size="Size.Large" Class="mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.Search" />
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Class="fw-bold mb-2">2. Găsește Colegi & Camere</MudText>
                    <MudText Typo="Typo.body2">
                        Explorează profiluri compatibile și anunțuri cu camere disponibile.
                    </MudText>
                </MudStack>
            </MudItem>
            
            <MudItem xs="12" md="4">
                <MudStack AlignItems="AlignItems.Center" Class="text-center">
                    <MudAvatar Style="background-color: var(--mud-palette-tertiary); color: white;" Size="Size.Large" Class="mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.ConnectWithoutContact" />
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Class="fw-bold mb-2">3. Conectează-te</MudText>
                    <MudText Typo="Typo.body2">
                        Inițiază conversații sigure pentru a vă cunoaște mai bine înainte de a vă muta împreună.
                    </MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>

<!-- CTA Section -->
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-5">
    <MudPaper Class="pa-8 text-center" Style="background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%); color: white;">
        <MudText Typo="Typo.h3" Class="mb-4 fw-bold">
            Gata să-ți găsești colegul perfect?
        </MudText>
        <MudText Typo="Typo.h6" Class="mb-6">
            Alătură-te comunității noastre și descoperă persoane compatibile cu tine
        </MudText>
        <MudButton Variant="Variant.Filled" 
                   Color="Color.Secondary" 
                   Size="Size.Large" 
                   StartIcon="@Icons.Material.Filled.PersonAdd"
                   Href="/register">
            Înregistrează-te Gratuit
        </MudButton>
    </MudPaper>
</MudContainer>
